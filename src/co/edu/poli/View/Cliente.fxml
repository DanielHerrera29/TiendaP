<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.poli.Controller.ClienteController">

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <HBox spacing="10">
                <VBox>
                    <Label text="Nombre"/>
                    <TextField fx:id="txtNombre"/>
                    <Label fx:id="lblNombreError" textFill="red"/>
                </VBox>
                <VBox>
                    <Label text="Correo"/>
                    <TextField fx:id="txtCorreo"/>
                    <Label fx:id="lblCorreoError" textFill="red"/>
                </VBox>
            </HBox>

            <HBox spacing="10">
                <VBox>
                    <Label text="Dirección"/>
                    <TextField fx:id="txtDireccion"/>
                    <Label fx:id="lblDireccionError" textFill="red"/>
                </VBox>
                <VBox>
                    <Label text="Categoría"/>
                    <ComboBox fx:id="cmbCategoria"/>
                    <Label fx:id="lblCategoriaError" textFill="red"/>
                </VBox>
            </HBox>

            <HBox spacing="10">
                <VBox>
                    <Label text="Monto de Compra Mensual"/>
                    <TextField fx:id="txtMontoCompraMensual" disable="true"/>
                </VBox>
                <VBox>
                    <Label text="Beneficios"/>
                    <TextField fx:id="txtBeneficios" disable="true"/>
                </VBox>
            </HBox>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Registrar" onAction="#registrarCliente"/>
                <Button fx:id="btnGuardarEdicion" text="Guardar Edición" onAction="#guardarEdicionCliente" visible="false" managed="false"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Clientes Registrados"/>
            <TableView fx:id="tablaClientes" prefHeight="200">
                <columns>
                    <TableColumn text="Nombre" fx:id="colNombre">
                        <cellValueFactory><PropertyValueFactory property="nombre" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Correo" fx:id="colCorreo">
                        <cellValueFactory><PropertyValueFactory property="email" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Dirección" fx:id="colDireccion">
                        <cellValueFactory><PropertyValueFactory property="direccion" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Categoría" fx:id="colCategoria">
                        <cellValueFactory><PropertyValueFactory property="categoria" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Beneficios" fx:id="colBeneficios">
                        <cellValueFactory><PropertyValueFactory property="beneficios" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Monto de Compra Mensual" fx:id="colMontoCompraMensual">
                        <cellValueFactory><PropertyValueFactory property="montocompraMensual" /></cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
            <Button text="Volver al Menú" onAction="#volverAlMenu"/>
        </VBox>
    </bottom>
</BorderPane>
